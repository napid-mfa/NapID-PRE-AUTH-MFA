<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacer_10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card"
            android:background="@drawable/id_card_background"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_10"
                android:paddingLeft="@dimen/padding_10"
                android:paddingStart="@dimen/padding_10"
                android:paddingEnd="@dimen/padding_10"
                android:paddingRight="@dimen/padding_10"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:id="@+id/card_txt"
                        android:visibility="visible"
                        android:textSize="@dimen/text_size_medium"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacer_20"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ma****ni"
                        android:maxLines="2"
                        android:textSize="@dimen/id_text_size"
                        android:id="@+id/digital_id_name"
                        android:textColor="@color/id_disabled"/>

                    <!--<LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/vendor_height"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="@dimen/chip_size"
                            android:layout_height="@dimen/chip_size"
                            android:visibility="gone"
                            android:id="@+id/card_chip"
                            android:src="@drawable/chip"/>
                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/spacer_20"/>
                    </LinearLayout>-->






                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:visibility="visible"
                    android:id="@+id/id_touch"
                    android:layout_marginBottom="@dimen/spacer_10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/home_touch_str"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_small"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:id="@+id/touchtouse_txt"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fingerprint_img_size"
                        android:src="@drawable/fingerprint"
                        android:id="@+id/finger_print_img"
                        />





                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:visibility="gone"
                    android:id="@+id/id_timer"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/shutdown_img"
                        android:layout_height="@dimen/shutdown_img"
                        android:src="@drawable/shutdown"
                        android:layout_gravity="end"/>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacer_30"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/timer_text_size"
                        android:gravity="center"
                        android:importantForAccessibility="no"
                        android:includeFontPadding="false"
                        android:textStyle="bold"
                        android:id="@+id/timer"
                        android:textColor="#FFF"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/secureit_lnr"
                android:background="@drawable/id_secureby_background"
                android:paddingLeft="@dimen/padding_10"
                android:paddingEnd="@dimen/padding_10"
                android:visibility="visible"
                android:paddingTop="@dimen/padding_5"
                android:paddingBottom="@dimen/padding_5"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/secured_logo_size"
                    android:layout_height="@dimen/secured_logo_size"
                    android:id="@+id/secured_logo"
                    android:src="@drawable/verified2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:layout_gravity="center"
                    android:text="@string/securedby"
                    android:id="@+id/secured_txt"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/padding_5"
                    android:textColor="@color/napid_white"
                    />




            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/id_card_progress_background"
            android:visibility="gone"
            android:id="@+id/progress_lnr">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_progress"/>
        </LinearLayout>
    </FrameLayout>

</layout>